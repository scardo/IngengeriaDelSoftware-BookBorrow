<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ImageUpload</servlet-name>
        <servlet-class>it.bookBorrow.dataBase.manageImage.ImageUpload</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginAndRegistration</servlet-name>
        <servlet-class>it.bookBorrow.dataBase.query.LoginAndRegistration</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OperazioniAdmin</servlet-name>
        <servlet-class>it.bookBorrow.actorsOperations.OperazioniAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OperazioniUser</servlet-name>
        <servlet-class>it.bookBorrow.actorsOperations.OperazioniUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PrintImage</servlet-name>
        <servlet-class>it.bookBorrow.dataBase.manageImage.PrintImage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OperazioniPrestito</servlet-name>
        <servlet-class>it.bookBorrow.actorsOperations.OperazioniPrestito</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ImageUpload</servlet-name>
        <url-pattern>/ImageUpload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginAndRegistration</servlet-name>
        <url-pattern>/LoginAndRegistration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OperazioniAdmin</servlet-name>
        <url-pattern>/OperazioniAdmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OperazioniUser</servlet-name>
        <url-pattern>/OperazioniUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PrintImage</servlet-name>
        <url-pattern>/PrintImage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OperazioniPrestito</servlet-name>
        <url-pattern>/OperazioniPrestito</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
